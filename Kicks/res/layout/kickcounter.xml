<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linearLayout1" 
    android:layout_width="fill_parent" 
    android:orientation="vertical" 
    android:layout_height="fill_parent">
        <TextView
        android:id="@+id/numberOfKicks"
        android:text="0"
        android:layout_weight="1"  
        android:textColor="#aaaaaa" 
        android:textSize="70sp" 
        android:background="#000000" 
        android:layout_width="100dip" 
        android:layout_gravity="center" 
        android:numeric="decimal" 
        android:gravity="center"
        android:editable="true" android:layout_height="50dip"></TextView>
        <Button android:id="@+id/button1" 
        android:gravity="center" 
        android:layout_width="200dip" 
        android:text="@string/kick" 
        android:textSize="40sp"
        android:onClick="kick" android:layout_height="175dip" android:layout_marginBottom="300dip" android:layout_gravity="center" android:layout_margin="10dip"></Button>
        <Chronometer android:id="@+id/chronometer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:textSize="30sp"></Chronometer>
    </LinearLayout>






